
extends layout

block content

  br
  br
  .container
    .row.justify-content-center
      .col-md-8
        .card-group.mb-0
          .card.p-4
            .card-body
              h1 Login
              p.text-muted Sign In to your account
              .input-group.mb-3
                span.input-group-addon
                  i.fa.fa-user
                input.form-control(type='text', placeholder='Username')
              .input-group.mb-4
                span.input-group-addon
                  i.fa.fa-lock
                input.form-control(type='password', placeholder='Password')
              .row
                .col-6

                  button.btn.btn-primary.px-4(type='button' onclick='validation()') Login

                .col-6.text-right
                  button.btn.btn-link.px-0(type='button' onclick='forgot()') Forgot password?
          .card.text-white.py-5.d-md-down-none(style='width:44%')
            .card-body.text-center
              div
                h2 Sign up
                br
                br
                br
                p
                  | Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                button.btn.btn-primary.active.mt-3(type='button' onclick='signUp()') Register Now!
